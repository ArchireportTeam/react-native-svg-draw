{
  "name": "@archireport/react-native-svg-draw",
  "version": "1.2.0",
  "description": "React Native drawing component based on SVG with editable annotations",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-svg-draw.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/ArchireportTeam/react-native-svg-draw",
  "author": "Mickael Lecoq <mickael@lecoq.me> (https://github.com/ArchireportTeam)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArchireportTeam/react-native-svg-draw/issues"
  },
  "homepage": "https://github.com/ArchireportTeam/react-native-svg-draw#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "public": true
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.4",
    "@react-native-community/eslint-config": "^3.0.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^27.5.0",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.67.6",
    "commitlint": "^16.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^28.1.0",
    "pod-install": "^0.1.35",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "^0.68.2",
    "react-native-builder-bob": "^0.18.2",
    "react-native-gesture-handler": "^2.5.0",
    "react-native-reanimated": "^2.9.1",
    "react-native-svg": "^12.3.0",
    "react-native-view-shot": "^3.3.0",
    "release-it": "^15.0.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.10.1",
    "react-native-reanimated": ">=2.1.0",
    "react-native-svg": ">=12",
    "react-native-view-shot": ">=3.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
